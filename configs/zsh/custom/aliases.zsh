# Custom alias path
alias aliases="nvim ~/.oh-my-zsh/custom/aliases.zsh"

# Shell aliases
alias vim="nvim"
alias zsh="nvim ~/.zshrc"
alias szsh="source ~/.zshrc"

# Folder aliases
alias dot="nvim ~/dotfiles"
alias script="nvim ~/dotfiles/scripts"
alias conf="nvim ~/dotfiles/configs"
alias vconf="nvim ~/dotfiles/configs/nvim"

# Python aliases
alias py="python3"
alias pip="pip3"
